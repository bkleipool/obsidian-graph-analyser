

// Define tokens
WHITESPACE = _{ " " | "\t" }
char = _{ (!WHITESPACE) ~ANY }

// Define queries
title_include = { !"-" ~ char+ }
title_exclude = { "-" ~ char+ }

tag_include = { "tag:#" ~ char+ }
tag_exclude = { !"-" ~ "tag:#" ~ char+ }

query = { title_include | title_exclude | tag_include | tag_exclude }